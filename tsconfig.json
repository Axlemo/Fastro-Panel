{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "lib": [ "ES2022" ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@routes": [ "./system/http/routes/" ]
    }
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ]
}
